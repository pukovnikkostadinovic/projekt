<% include partials/header.ejs %>
    <div class="container">
        <form class="add-player-form" action="" method="post" enctype="application/json">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="ime_komp" id="ime_komp" placeholder="Ime Komponente" required>
                </div>
		<div class="form-group col-md-6">
                    <select id="position" name="kategorija" class="form-control" required>
                        <option selected disabled>Odaberi Kategoriju</option>
			 <% kategorije.forEach((kategorija, index) => { %>
				<option value="<%= kategorija.id %>"><%= kategorija.ime_kategorije %></option>
                    <% }) %>                        
                    </select>
                </div>
	
			<div class="form-group col-md-12">
                    <textarea  class="form-control" rows="5" name="kr_op" id="kr_op" placeholder="Kratak Opis" required></textarea>
                </div>
	            <button type="submit" class="btn btn-primary float-right">Spremi Komponentu</button>
</form>
    </div>
</div>
</body>
</html>