<% include partials/header.ejs %>
    <div class="container">
        <form class="add-player-form" action="" method="post" enctype="application/json">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="kolicina" id="kolicina" placeholder="Unesi Količinu" required>
                </div>
                <div class="form-group col-md-6">
                    <select id="lokacija" name="lokacija" class="form-control" required>
                        <option selected disabled>Odaberi Lokaciju</option>
			 <% lokacije.forEach((lokacija, index) => { %>
                        <option value="<%= lokacija.id %>"><%= lokacija.ime_lokacije %></option>
			<% }) %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Spremi</button>
        </form>
    </div>
</div>
</body>
</html>