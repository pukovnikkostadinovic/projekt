<% include partials/header.ejs %>
    <div class="container">
        <form class="add-player-form" action="" method="post" enctype="application/json">
            <div class="form-row">
                <div class="form-group col-md-6">
    			<input class="form-control" type="number" value="<%= lok_kol.kolicina %>" id="kolicina" name="kolicina">
                </div>
		<div class="form-group col-md-6">
                    <select id="lokacija" name="lokacija" class="form-control" required>
			 <% lokacije.forEach((lokacija, index) => { %>
				<%if (lokacija.id == lok_kol.lok_id) { %>
				<option selected value="<%= lokacija.id %>"><%= lokacija.ime_lokacije %></option>
				<% } else{ %>
                                <option value="<%= lokacija.id %>"><%= lokacija.ime_lokacije %></option>
                    <% }}) %>                        
                    </select>
                </div>
	            <button type="submit" class="btn btn-primary float-right">Spremi Izmjenu</button>
</form>
    </div>
</div>
</body>
</html>