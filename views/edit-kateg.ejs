<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (kategorija) { %>
        <form class="add-player-form" action="" method="post" enctype="application/json">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="first-name">Ime Kategorije</label>
                    <input type="text" class="form-control" name="ime_kat" id="ime_kat" value="<%= kategorija.ime_kategorije %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Kratak Opis</label>
                    <input type="text" class="form-control" name="kr_op" id="kr_op" value="<%= kategorija.kratak_opis %>" required>
                </div>
            <button type="submit" class="btn btn-success float-right">Izmjeni kategoriju</button>
        </form>
    <% } else { %>
        <p class="text-center">Player Not Found. Go <a href="/add">here</a> to add players.</p>
    <% } %>
</div>
</div>
</body>
</html>