<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (komponente.length > 0) {%>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Ime komponente</th>
                        <th scope="col">Kratak opis</th>
			<th scope="col">Komada</th>
                        <th scope="col">Akcija</th>
                    </tr>
                </thead>
                <tbody>
                    <% komponente.forEach((komponenta, index) => { %>
			     <tr>
                            <td class="col-md-3"><a href="/komp/<%= komponenta.komp_id %>"><%= komponenta.ime_komponente %></a></td>
                            <td class="col-md-7"><%= komponenta.kratak_opis_komp %></td>
			    <td class="col-md-2 <% if (komponenta.komada === 0) {%>bg-danger<% } else if(komponenta.komada === 1){ %>bg-warning"<% } %>">
				<%= komponenta.komada %>
			    </td>   			    
			    <td class="col-md-3">
                                <a href="/izmjeni_komp/<%= komponenta.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Izmjeni</a>
                                <a href="/izbrisi_komp/<%= komponenta.id %>" class="btn btn-sm btn-danger">Izbri≈°i</a>
                            </td>
                        </tr>
		<% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>